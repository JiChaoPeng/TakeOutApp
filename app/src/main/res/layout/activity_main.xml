<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/order"
            android:background="@drawable/shape_tabbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:tint="@color/theme"
                    android:layout_height="22dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/waimai" />

                <TextView
                    android:id="@+id/tabbar_group_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:gravity="center_horizontal"
                    android:text="外卖"
                    android:textColor="#FF989CB2"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/shape_tabbar"
            android:id="@+id/shopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:tint="@color/theme"
                    android:layout_height="22dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/gouwuche" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:gravity="center_horizontal"
                    android:text="购物车"
                    android:textColor="#FF989CB2"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>
        <!-- 我的-->
        <LinearLayout
            android:background="@drawable/shape_tabbar"
            android:id="@+id/mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tabbar_mine"
                    android:tint="@color/theme"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/mine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:gravity="center_horizontal"
                    android:text="我的"
                    android:textColor="#FF989CB2"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>